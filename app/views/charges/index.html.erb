<h1>CHARGES</h1>

<table >
  <thead>
    <h1>FAILED CHARGES</h1>
    <tr>
      <th>Customer Name</th>
      <th>Amount</th>
      <th>Date</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @charges.each do |charge| %>
    <% if charge.paid == false %>
      <tr class="failed">
        <td><%= @customers.find(charge.customer_id).first_name %> <%= @customers.find(charge.customer_id).last_name %></td>
        <td><%= number_to_currency(charge.amount) %></td>
        <td><%= charge.created %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<table>
  <thead>
    <h1>DISPUTED CHARGES</h1>
    <tr>
      <th>Customer Name</th>
      <th>Amount</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @charges.each do |charge| %>
    <% if charge.paid == true && charge.refunded == true %>
      <tr class="disputed">
        <td><%= @customers.find(charge.customer_id).first_name %> <%= @customers.find(charge.customer_id).last_name %></td>
        <td><%= charge.amount %></td>
        <td><%= charge.created %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<table>
  <thead>
    <h1>SUCCESSFUL CHARGES</h1>
    <tr>
      <th>Amount</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @charges.each do |charge| %>
    <% if charge.paid == true && charge.refunded == false %>
      <tr>
        <td><%= charge.amount %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Charge', new_charge_path %>
